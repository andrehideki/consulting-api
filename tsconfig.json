{
  "compilerOptions": {
    "target": "es2017",  
    "module": "commonjs",
    "lib": [ "ES6" ],
    "allowJs": true, 
    "outDir": "./dist",
    "rootDir": "./src", 
    "removeComments": true, 
    "baseUrl": ".",
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ], 
    "resolveJsonModule": true,
    "experimentalDecorators": true,        
    "emitDecoratorMetadata": true,         
    "paths": {
      
      "@root/*": [ "./" ],
      "@domain/*": [ "./src/domain/*" ],
      "@adapter/*": ["./src/adapter/*"],
      "@infra/*": ["./src/infra/*"]
    },                                              
    "esModuleInterop": true, 
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true  
  },
  "include": [ "src/**/*" ]
}
